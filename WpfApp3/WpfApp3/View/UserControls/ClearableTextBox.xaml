<UserControl x:Class="WpfApp3.View.UserControls.ClearableTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp3.View.UserControls"
             mc:Ignorable="d" 
             >
    <Grid Background="White">
        <TextBox x:Name="txtInput" Background="Transparent"  FontSize="20" VerticalAlignment="Center" FontWeight="Light" Margin="5" TextChanged="TxtInput_TextChanged"/>
        <TextBlock x:Name="txtPlaceholder" Foreground="DarkGray" Background="Transparent" Text="{Binding Placeholder}" FontSize="20" VerticalAlignment="Center" FontWeight="Light" Margin="5" Panel.ZIndex="-1"/>
        <Button x:Name="clearbtn" Width="50" Content="X" FontSize="20" Height="50"  Background="Transparent" BorderThickness="0" Foreground="DarkGray" HorizontalAlignment="Right" Click="Clearbtn_Click"/>
    </Grid>
</UserControl>
