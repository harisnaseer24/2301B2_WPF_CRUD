<UserControl x:Class="WpfApp3.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp3"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
     <Grid>
     <Grid.RowDefinitions>
         <RowDefinition Height="30"/>
         <RowDefinition Height="40"/>
     </Grid.RowDefinitions>

     <Menu>
         <MenuItem FontSize="16" Header="File">
             <MenuItem Header="Exit" FontSize="16"/>
         </MenuItem>
         <MenuItem FontSize="16" Header="Edit"/>
     </Menu>
     <Grid Grid.Row="1">
         <Grid.ColumnDefinitions>
             <ColumnDefinition  Width="Auto"/>
             <ColumnDefinition Width="Auto"/>
         </Grid.ColumnDefinitions>
         <TextBox Grid.Column="0" Width="150" Margin="5"/>
         <Button Grid.Column="1" Content="Search" Width="50" Margin="5"/>
     </Grid>
     
 </Grid>
</UserControl>
