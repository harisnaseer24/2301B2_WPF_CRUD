        <TextBox x:Name="textBox" HorizontalAlignment="Center" Height="37" Margin="0,107,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="574"/>
        <TextBox x:Name="textBox_Copy" HorizontalAlignment="Center" Height="37" Margin="0,180,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="574"/>
        <Button x:Name="addBtn" Content="Button" HorizontalAlignment="Left" Margin="113,262,0,0" VerticalAlignment="Top" Height="36" Width="118" Click="addBtn_Click" />
        <Label x:Name="label" Content="Name" HorizontalAlignment="Left" Margin="113,61,0,0" VerticalAlignment="Top" Width="99"/>
        <Button x:Name="button" Content="View Data" HorizontalAlignment="Left" Margin="687,61,0,0" VerticalAlignment="Top" Width="72" Click="button_Click"/>

    </Grid>
</Window>
